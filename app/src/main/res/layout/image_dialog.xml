<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ImageAddPopup"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/naver_green_light"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/dialog_enlargeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:width="180dp"
        android:background="@android:color/transparent"
        android:text="@string/button_imageEnlarge"
        android:fontFamily="@font/nanum_square_round_b"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dialog_deleteImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:width="180dp"
        android:background="@android:color/transparent"
        android:text="@string/button_imageDelete"
        android:fontFamily="@font/nanum_square_round_b"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>